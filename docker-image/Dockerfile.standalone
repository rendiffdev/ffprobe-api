# === AUTO-CLEANUP ===
AUTO_CLEANUP_ENABLED=true
CLEANUP_UPLOADS_AFTER_HOURS=24
CLEANUP_REPORTS_AFTER_DAYS=7
CLEANUP_TEMP_AFTER_HOURS=1
